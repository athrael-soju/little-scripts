# =============================================================================
# Little Scripts Monorepo - EditorConfig
# =============================================================================
# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
# Use UTF-8 encoding
charset = utf-8

# Unix-style line endings
end_of_line = lf

# Ensure file ends with a newline
insert_final_newline = true

# Remove trailing whitespace
trim_trailing_whitespace = true

# Indent with spaces
indent_style = space
indent_size = 4

# =============================================================================
# Python files
# =============================================================================
[*.{py,pyi,pyx}]
indent_size = 4
max_line_length = 88

# =============================================================================
# Web files (HTML, CSS, JS, TS)
# =============================================================================
[*.{html,htm,css,scss,sass,less}]
indent_size = 2

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# =============================================================================
# Data and Config files
# =============================================================================
[*.{json,jsonc}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.toml]
indent_size = 4

[*.{xml,svg}]
indent_size = 2

# =============================================================================
# Markdown
# =============================================================================
[*.{md,mdx}]
# Trailing whitespace is significant in Markdown (line breaks)
trim_trailing_whitespace = false
indent_size = 2

# =============================================================================
# Shell scripts
# =============================================================================
[*.{sh,bash,zsh}]
indent_size = 2

# =============================================================================
# Docker
# =============================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# =============================================================================
# Makefiles
# =============================================================================
[Makefile]
# Makefiles require tabs
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# =============================================================================
# Git files
# =============================================================================
[.git*]
indent_size = 4

# =============================================================================
# Requirements files
# =============================================================================
[requirements*.txt]
insert_final_newline = true

[constraints.txt]
insert_final_newline = true

# =============================================================================
# Jupyter notebooks
# =============================================================================
[*.ipynb]
indent_size = 1
insert_final_newline = false

# =============================================================================
# Environment files
# =============================================================================
[.env*]
insert_final_newline = true

# =============================================================================
# License and documentation
# =============================================================================
[LICENSE]
insert_final_newline = true

[*.rst]
indent_size = 3
